<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
  <style>
    @keyframes pulse {
      0%, 100% {
        background-color: yellow;
      }
      50% {
        background-color: red;
      }
    }
    * {
      margin: 0;
      padding: 0;
      list-style: none;
    }
    html {
      font-family: monospace;
    }
    header {
      width: 135px;
      padding: 4px;
      padding-left: 10px;
      font-size: 24px;
      border-right: 1px solid #000;
      border-bottom: 1px solid #000;
      border-radius: 0 0 25px 0;
    }
    ul {
      max-width: 40%;
      margin: 0 auto;
    }
    .url-item {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }
    .url-item form {
      display: inline-block;
      margin-left: 50px;
    }
    .url-item button {
      width: 50px;
      height: 25px;
      border: 1px solid #fff;
      border-radius: 25px;
      animation: pulse 2s infinite;
      cursor: pointer;
      font-weight: bold;
    }
  </style>

</head>
<body>
  <% include partials/_header %>
  <% include partials/_nav %>
  <ul>
    <% for (let url of Object.keys(urls)) { %>
      <li class="url-item"><%= url %> - <%= urls[url] %>
        <form method="POST" action="/urls/<%=url%>/delete">
          <button>Delete</button>
        </form>
    <% } %>
  </ul>

</body>
</html>
